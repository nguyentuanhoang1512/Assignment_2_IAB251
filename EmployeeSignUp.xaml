<Window x:Class="front_end.EmployeeSignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Sign Up" Height="440.1" Width="214.5"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border Background="#002F6C" CornerRadius="25" BorderThickness="2" BorderBrush="#F7941D">
        <!-- The ScrollViewer is inside the fixed Border to allow the content to scroll -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="400" Width="200" Margin="0,10,0,-10" Grid.ColumnSpan="2">
                <StackPanel HorizontalAlignment="Center" Width="180" Margin="10">
                    <!-- Title Label -->
                    <Label Content="Employee &#xD;&#xA;Sign Up" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="36" Foreground="White" Margin="10"/>

                    <!-- First Name Input -->
                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
                        <TextBox Background="{x:Null}" BorderThickness="0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333" Margin="9,5,-9,0"/>
                    </Border>

                    <!-- Family Name Input -->
                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Margin="10,5,0,5">
                        <TextBox Background="{x:Null}" BorderThickness="0" TextWrapping="Wrap" Text="Family Name" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333" Height="9" Margin="-1,0,0,0"/>
                    </Border>

                    <!-- Email Address Input -->
                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
                        <TextBox Background="{x:Null}" BorderThickness="0" TextWrapping="Wrap" Text="Email Address" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333"/>
                    </Border>

                    <!-- Phone Number Input -->
                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Margin="10,5,0,5">
                        <TextBox Background="{x:Null}" BorderThickness="0" TextWrapping="Wrap" Text="Phone Number" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333"/>
                    </Border>

                    <!-- Employee Type Selection -->
                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
                        <ComboBox Background="White" Foreground="#333333" VerticalAlignment="Center">
                            <ComboBoxItem Content="Admin"/>
                            <ComboBoxItem Content="Quotation Officer"/>
                            <ComboBoxItem Content="Booking Officer"/>
                            <ComboBoxItem Content="Warehouse Officer"/>
                            <ComboBoxItem Content="Manager"/>
                            <ComboBoxItem Content="CIO"/>
                        </ComboBox>
                    </Border>

                    <!-- Address Input -->
                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Margin="10,5,0,5">
                        <TextBox Background="{x:Null}" BorderThickness="0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333" Margin="9,0,0,0"/>
                    </Border>

                    <!-- Password Input -->
                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
                        <PasswordBox Background="White" BorderThickness="0" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333"/>
                    </Border>

                    <!-- Sign Up Button -->
                    <Button Content="Sign Up" HorizontalAlignment="Center" Width="120" Height="40" Background="#F7941D" Foreground="White" FontFamily="Tw Cen MT Condensed Extra Bold" Margin="10"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
