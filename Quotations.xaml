<Window x:Class="front_end.Quotations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pending Quotations" Height="440.1" Width="214.5" Background="#002F6C">

    <!-- ScrollViewer for scrollable content -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">

                <!-- Title Label -->
                <Label Content="Quotations" 
                       FontSize="18" 
                       Foreground="White" 
                       FontFamily="Tw Cen MT Condensed Extra Bold"/>

                <!-- List of Quotations -->
                <ListView Name="QuotationListView" Width="180" Height="300" Margin="5">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Request ID" DisplayMemberBinding="{Binding RequestID}" Width="60"/>
                            <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DateIssued}" Width="60"/>
                            <GridViewColumn Header="Action" Width="60">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <!-- Accept Button -->
                                            <Button Content="✓" Width="20" Height="20" 
                                                    Margin="2" 
                                                    Background="#F7941D" 
                                                    Foreground="White" 
                                                    Click="AcceptQuotation_Click"/>
                                            <!-- Reject Button -->
                                            <Button Content="✗" Width="20" Height="20" 
                                                    Margin="2" 
                                                    Background="#F7941D" 
                                                    Foreground="White" 
                                                    Click="RejectQuotation_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Back to Dashboard Button -->
                <Button Content="Back to Dashboard" Width="120" Height="30" Margin="5" 
                        Background="#F7941D" Foreground="White" 
                        FontFamily="Tw Cen MT Condensed Extra Bold" Click="BackToDashboard_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
