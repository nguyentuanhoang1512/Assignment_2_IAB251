<Window x:Class="front_end.Quotations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pending Quotations" Height="440.1" Width="214.5"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border Background="#002F6C" CornerRadius="25" BorderThickness="2" BorderBrush="#F7941D">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
                    <!-- Title Section with Back Button and Quotations Label -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Back Button -->
                        <Button Grid.Column="0" Width="20" Height="18" 
                                HorizontalAlignment="Left" 
                                Background="{x:Null}" BorderBrush="{x:Null}" 
                                BorderThickness="2" Margin="10" Padding="0" Click="GoBack_Click">
                            <Border CornerRadius="18">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72B;" 
                                           Foreground="#F7941D" FontSize="16" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </Button>

                        <!-- Quotations Label -->
                        <Label Grid.Column="1" Content="Quotations" 
                               FontSize="24" 
                               Foreground="White" 
                               FontFamily="Tw Cen MT Condensed Extra Bold" 
                               VerticalAlignment="Center" HorizontalAlignment="Left" 
                               Margin="1,0,0,0"/>
                    </Grid>

                    <!-- List of Quotations -->
                    <ListView x:Name="QuotationListView" Width="180" Height="300" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Request ID" DisplayMemberBinding="{Binding RequestID}" Width="60"/>
                                <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DateIssued}" Width="60"/>
                                <GridViewColumn Header="Action" Width="60">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <!-- Accept Button -->
                                                <Button Content="✓" Width="20" Height="20" 
                                                        Margin="2" 
                                                        Background="#F7941D" 
                                                        Foreground="White" 
                                                        Click="AcceptQuotation_Click"/>
                                                <!-- Reject Button -->
                                                <Button Content="✗" Width="20" Height="20" 
                                                        Margin="2" 
                                                        Background="#F7941D" 
                                                        Foreground="White" 
                                                        Click="RejectQuotation_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Back to Dashboard Button -->
                    <Button Content="Back to Dashboard" Width="120" Height="30" Margin="5" 
                            Background="#F7941D" Foreground="White" 
                            FontFamily="Tw Cen MT Condensed Extra Bold" Click="BackToDashboard_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Window>
