<Window x:Class="front_end.RequestQuotationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Request Quotation" Height="440.1" Width="214.5" Background="#002F6C">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
                <Label Content="Request Quotation" FontSize="18" Foreground="White" FontFamily="Tw Cen MT Condensed Extra Bold"/>

                <TextBox Name="SourceTextBox" Width="180" Margin="5" Text="Source" 
                         Background="White" Foreground="#333333" 
                         FontFamily="Tw Cen MT Condensed Extra Bold"/>
                <TextBox Name="DestinationTextBox" Width="180" Margin="5" Text="Destination" 
                         Background="White" Foreground="#333333"
                         FontFamily="Tw Cen MT Condensed Extra Bold"/>
                <TextBox Name="NumberOfContainersTextBox" Width="180" Margin="5" Text="Number of Containers" 
                         Background="White" Foreground="#333333" 
                         FontFamily="Tw Cen MT Condensed Extra Bold"/>
                <TextBox Name="NatureOfPackageTextBox" Width="180" Margin="5" Text="Nature of the Package" 
                         Background="White" Foreground="#333333"
                         FontFamily="Tw Cen MT Condensed Extra Bold"/>
                <TextBox Name="NatureOfJobTextBox" Width="180" Margin="5" Text="Nature of the Job" 
                         Background="White" Foreground="#333333"
                         FontFamily="Tw Cen MT Condensed Extra Bold" AcceptsReturn="True" Height="60"/>

                <Button Content="Submit" Width="120" Height="30" Margin="10" 
                        Background="#F7941D" Foreground="White" 
                        FontFamily="Tw Cen MT Condensed Extra Bold"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
