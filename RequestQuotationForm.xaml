<Page x:Class="front_end.RequestQuotationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Request Quotation" Height="400" Width="780">

    <Border Background="#002F6C" CornerRadius="25" BorderThickness="2" BorderBrush="#F7941D">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,-2,-20,0">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">

                    <Button Width="20" Height="18" 
                            HorizontalAlignment="Left" 
                            Background="{x:Null}" BorderBrush="{x:Null}" 
                            BorderThickness="2" Margin="10" Padding="0" Click="GoBack_Click">
                        <Border CornerRadius="18">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72B;" 
                                       Foreground="#F7941D" FontSize="16" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </Button>

                    <!-- Title Label -->
                    <Label Content="Request Quotation" 
                           Width="180" 
                           HorizontalAlignment="Center" 
                           FontSize="24" 
                           Foreground="White" 
                           FontFamily="Tw Cen MT Condensed Extra Bold" 
                           HorizontalContentAlignment="Center" 
                           Margin="10"/>

                    <!-- Input fields -->

                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <TextBox Name="SourceTextBox" BorderThickness="0" TextWrapping="Wrap" Tag="Source" GotFocus="ClearText" LostFocus="AddPlaceholderText" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333"/>
                    </Border>

                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <TextBox Name="DestinationTextBox" BorderThickness="0" TextWrapping="Wrap" Tag="Destination" GotFocus="ClearText" LostFocus="AddPlaceholderText" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333"/>
                    </Border>

                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <TextBox Name="NumberOfContainersTextBox" BorderThickness="0" TextWrapping="Wrap" Tag="Number of Containers" GotFocus="ClearText" LostFocus="AddPlaceholderText" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333"/>
                    </Border>

                    <Border HorizontalAlignment="Center" VerticalAlignment="Top" Width="180" Height="29" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Margin="5">
                        <TextBox Name="NatureOfPackageTextBox" BorderThickness="0" TextWrapping="Wrap" Tag="Nature of the Package" GotFocus="ClearText" LostFocus="AddPlaceholderText" VerticalAlignment="Center" FontFamily="Tw Cen MT Condensed Extra Bold" Foreground="#333333"/>
                    </Border>

                    <!-- ComboBox for Nature of Job -->
                    <Border HorizontalAlignment="Center" Width="180" Height="29" Background="White" CornerRadius="10" Margin="5">
                        <ComboBox Name="ImportExportComboBox">
                            <ComboBoxItem Content="Import"/>
                            <ComboBoxItem Content="Export"/>
                        </ComboBox>
                    </Border>

                    <!-- ComboBox for Packing/Unpacking -->
                    <Border HorizontalAlignment="Center" Width="180" Height="29" Background="White" CornerRadius="10" Margin="5">
                        <ComboBox Name="PackingUnpackingComboBox">
                            <ComboBoxItem Content="Packing"/>
                            <ComboBoxItem Content="Unpacking"/>
                        </ComboBox>
                    </Border>

                    <!-- TextBox fields for Quarantine Requirements, Cargo Storage, Warehousing -->
                    <Border HorizontalAlignment="Center" Width="180" Height="29" Background="White" CornerRadius="10" Margin="5">
                        <TextBox Name="QuarantineTextBox" Tag="Quarantine Requirements" GotFocus="ClearText" LostFocus="AddPlaceholderText" />
                    </Border>
                    <Border HorizontalAlignment="Center" Width="180" Height="29" Background="White" CornerRadius="10" Margin="5">
                        <TextBox Name="CargoStorageTextBox" Tag="Cargo Storage" GotFocus="ClearText" LostFocus="AddPlaceholderText" />
                    </Border>
                    <Border HorizontalAlignment="Center" Width="180" Height="29" Background="White" CornerRadius="10" Margin="5">
                        <TextBox Name="WarehousingTextBox" Tag="Warehousing Details" GotFocus="ClearText" LostFocus="AddPlaceholderText" />
                    </Border>

                    <!-- Submit Button -->
                    <Border CornerRadius="20" Width="120" Height="40" Margin="10">
                        <Button Content="Submit" Background="#F7941D" Foreground="White" FontFamily="Tw Cen MT Condensed Extra Bold" BorderThickness="0" Click="Submit_Click"/>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Page>
