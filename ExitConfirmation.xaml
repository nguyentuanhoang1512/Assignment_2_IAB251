<Window x:Class="front_end.ExitConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm Exit" Height="100" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Are you sure you want to exit?" FontSize="12" TextAlignment="Center" Margin="0,20,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Yes" Width="75" Margin="10" Click="YesButton_Click"/>
                <Button Content="No" Width="75" Margin="10" Click="NoButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
