<Window x:Class="front_end.CustomerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Dashboard" Height="440.1" Width="214.5"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border Background="#002F6C" CornerRadius="25" BorderThickness="2" BorderBrush="#F7941D">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="343">

                    <!-- Interport Logo -->
                    <Image Source="/front_end;component/Resources/logo.png" 
                           Width="150" Height="50" 
                           HorizontalAlignment="Center" Margin="0,10,0,10"/>

                    <!-- Welcome Label -->
                    <Label Content="Welcome to Interport" 
                           FontSize="20" 
                           Foreground="White" 
                           FontFamily="Tw Cen MT Condensed Extra Bold"
                           HorizontalAlignment="Center" Margin="0,5,0,15"/>

                    <!-- Short Description -->
                    <TextBlock Text="Manage your shipments with ease and get quotations for your cargo needs." 
                               FontSize="12" Foreground="White" 
                               TextWrapping="Wrap" TextAlignment="Center"/>

                    <!-- Request Quotation Button -->
                    <Button Content="Request Quotation" 
                            Width="150" Height="40" 
                            Margin="10" 
                            Background="#F7941D" 
                            Foreground="White" 
                            FontFamily="Tw Cen MT Condensed Extra Bold"/>

                    <!-- View Quotation Status Button -->
                    <Button Content="View Quotation Status" 
                            Width="150" Height="40" 
                            Background="#F7941D" 
                            Foreground="White" 
                            FontFamily="Tw Cen MT Condensed Extra Bold" RenderTransformOrigin="0.502,0.559"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Window>
