<Page x:Class="front_end.RateSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Rate Schedule"  Height="400" Width="780">

    <Grid Background="#002f6C">
        <DataGrid x:Name="RateScheduleDataGrid"
                  ItemsSource="{Binding RateSchedules}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True" Margin="161,81,161,225">

            <!-- Define the columns for the DataGrid -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Origin" Binding="{Binding Origin}" />
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" />
                <DataGridTextColumn Header="Rate per Container" Binding="{Binding RatePerContainer}" />
                <DataGridTextColumn Header="Currency" Binding="{Binding Currency}" />
                <DataGridTextColumn Header="Effective Date" Binding="{Binding EffectiveDate, StringFormat={}{0:dd/MM/yyyy}}" />
                <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate, StringFormat={}{0:dd/MM/yyyy}}" />
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Page>
